lua
local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

local ScreenGui = Instance.new("ScreenGui", gui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0.5, 0, 0.12, 0)
Frame.Position = UDim2.new(0.25, 0, 0.44, 0)
Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Frame.BorderSizePixel = 0
Frame.ClipsDescendants = true

local Bar = Instance.new("Frame", Frame)
Bar.Size = UDim2.new(0, 0, 1, 0)
Bar.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
Bar.BorderSizePixel = 0

local UIGradient = Instance.new("UIGradient", Bar)
UIGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 60, 60)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 150, 0))
}

local Text = Instance.new("TextLabel", Frame)
Text.Size = UDim2.new(1, 0, 1, 0)
Text.BackgroundTransparency = 1
Text.TextColor3 = Color3.fromRGB(255, 255, 255)
Text.Font = Enum.Font.GothamBold
Text.TextScaled = true
Text.Text = "ðŸŒ‘ Patch Spawner - Carregando 0%"

for i = 0, 100 do
	Bar.Size = UDim2.new(i/100, 0, 1, 0)
	Text.Text = "ðŸŒ‘ Patch Spawner - Carregando "..i.."%"
	task.wait(0.03)
end

task.wait(0.6)
ScreenGui:Destroy()

local mainGui = Instance.new("ScreenGui", gui)
local button = Instance.new("TextButton", mainGui)
button.Size = UDim2.new(0.2, 0, 0.08, 0)
button.Position = UDim2.new(0.4, 0, 0.85, 0)
button.Text = "ðŸŒ‘ Spawnar Patches"
button.TextScaled = true
button.Font = Enum.Font.GothamBold
button.TextColor3 = Color3.fromRGB(255,255,255)
button.BackgroundColor3 = Color3.fromRGB(30,30,30)
button.BorderSizePixel = 0

local gradient = Instance.new("UIGradient", button)
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 50, 50)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 120, 0))
}

button.MouseButton1Click:Connect(function()
	local ok, patchesFolder = pcall(function()
		return game:GetService("ReplicatedStorage"):WaitForChild("GrowAGardenPatches", 5)
	end)
	if not ok or not patchesFolder then return end

	local char = player.Character or player.CharacterAdded:Wait()
	local hrp = char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end
	local origin = hrp.Position
	local PATCHES = patchesFolder:GetChildren()
	local count = #PATCHES
	local radius = 12

	local function ringPositions(center, r, n)
		local t = {}
		for i = 1, n do
			local ang = (i / n) * math.pi * 2
			local x = center.X + math.cos(ang) * r
			local z = center.Z + math.sin(ang) * r
			table.insert(t, Vector3.new(x, center.Y, z))
		end
		return t
	end

	local positions = ringPositions(origin, radius, count)
	for i, patch in ipairs(PATCHES) do
		local pos = positions[i]
		local cloned = patch:Clone()
		for _, desc in ipairs(cloned:GetDescendants()) do
			if desc:IsA("Script") or desc:IsA("LocalScript") then
				desc:Destroy()
			end
			if desc:IsA("BasePart") then
				desc.Anchored = true
				desc.CanCollide = false
			end
		end
		local wrapper = Instance.new("Model")
		wrapper.Name = "VISUAL_" .. (patch.Name or ("Patch"..i))
		cloned.Parent = wrapper
		for _, v in ipairs(wrapper:GetDescendants()) do
			if v:IsA("BasePart") then
				v.Position = pos + Vector3.new(0, (v.Size.Y/2), 0)
			end
		end
		wrapper.Parent = workspace
		task.spawn(function()
			local parts = {}
			for _, v in ipairs(wrapper:GetDescendants()) do
				if v:IsA("BasePart") then
					table.insert(parts, v)
					v.Transparency = 1
				end
			end
			for step = 1, 10 do
				for _, p in ipairs(parts) do
					p.Transparency = 1 - (step / 10)
				end
				task.wait(0.03)
			end
		end)
	end
end)
