local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

local ScreenGui = Instance.new("ScreenGui", gui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0.5, 0, 0.12, 0)
Frame.Position = UDim2.new(0.25, 0, 0.44, 0)
Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Frame.BorderSizePixel = 0

local Bar = Instance.new("Frame", Frame)
Bar.Size = UDim2.new(0, 0, 1, 0)
Bar.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
Bar.BorderSizePixel = 0

local Text = Instance.new("TextLabel", Frame)
Text.Size = UDim2.new(1, 0, 1, 0)
Text.BackgroundTransparency = 1
Text.TextColor3 = Color3.fromRGB(255, 255, 255)
Text.Font = Enum.Font.GothamBold
Text.TextScaled = true
Text.Text = "ðŸŒ‘ Patch Spawner - Carregando 0%"

for i = 0, 100 do
	Bar.Size = UDim2.new(i/100, 0, 1, 0)
	Text.Text = "ðŸŒ‘ Patch Spawner - Carregando "..i.."%"
	task.wait(0.03)
end

task.wait(0.5)
ScreenGui:Destroy()

local mainGui = Instance.new("ScreenGui", gui)
local button = Instance.new("TextButton", mainGui)
button.Size = UDim2.new(0.2, 0, 0.08, 0)
button.Position = UDim2.new(0.4, 0, 0.85, 0)
button.Text = "ðŸŒ‘ Spawnar Patches"
button.TextScaled = true
button.Font = Enum.Font.GothamBold
button.TextColor3 = Color3.fromRGB(255,255,255)
button.BackgroundColor3 = Color3.fromRGB(30,30,30)
button.BorderSizePixel = 0

local function spawnPatch(position, i, total)
	local patch = Instance.new("Part")
	patch.Size = Vector3.new(4, 0.5, 4)
	patch.Anchored = true
	patch.CanCollide = false
	patch.Transparency = 1
	patch.Position = position
	patch.Name = "VISUAL_PATCH_"..i
	patch.Parent = workspace

	local color1 = Color3.fromHSV(i/total,1,1)
	local color2 = Color3.fromHSV((i/total + 0.1)%1,1,1)
	local gradient = Instance.new("SurfaceAppearance", patch)
	gradient.ColorMap = ColorSequence.new({ColorSequenceKeypoint.new(0,color1), ColorSequenceKeypoint.new(1,color2)})

	for t = 0, 1, 0.05 do
		patch.Transparency = 1-t
		task.wait(0.02)
	end
end

button.MouseButton1Click:Connect(function()
	local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if not hrp then return end
	local origin = hrp.Position
	local radius = 12
	local patchesCount = 8

	for i = 1, patchesCount do
		local angle = (i/patchesCount)*math.pi*2
		local pos = origin + Vector3.new(math.cos(angle)*radius, 0, math.sin(angle)*radius)
		spawnPatch(pos, i, patchesCount)
	end
end)
